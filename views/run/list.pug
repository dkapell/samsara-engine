extends ../layout

block content
    a.btn.btn-outline-success(href='/run/new')
        span(class="fa fa-plus")
        |  New Run
    .table-responsive
        table.table.table-striped.table-sorted.table-hover.my-3.dt-responsive.nowrap.table-sm.w-100
            thead
                tr
                    th
                    th(style="max-width:50px") ID
                    th(data-order='asc') Name
                    th Current
                    th Show Stubs
                    th(data-priority="1")
            tbody
                for run in runs
                    tr(class='clickable-row', data-click-object='run' data-click-id=run.id)
                        td.dtr-expand
                        th(scope="row")= run.id
                        td
                            a(href='/run/' + run.id)= run.name
                        td= run.current?'Yes':''
                        td
                            if run.show_stubs
                                span.px-3.py-1 Yes
                            else
                                span.bg-danger.text-white.rounded-pill.px-3.py-1 No
                        td.text-right
                            a.btn.btn-outline-danger.btn-xs.delete-btn(
                                role="button",
                                url=`/run/${run.id}`,
                                data-back='/run',
                                title='Delete'
                            )
                                i.fas.fa-trash.fa-fw


append scripts
    script(src='/javascripts/data-table.js')
