extends ../layout

block content
    a.btn.btn-outline-success(href='/user/new')
        span(class="fa fa-plus")
        |  New User
    .table-responsive
        table.table.table-striped.table-sorted.table-hover.my-3.dt-responsive.nowrap.table-sm
            thead
                tr
                    th
                    th Name
                    th Email
                    th Admin
                    th Creator
                    th GM
                    th Player
                    th Run
                    th Group
                    th Character

            tbody
                for user in users
                    tr(class='clickable-row', data-click-object='user' data-click-id=user.id)
                        td.dtr-expand
                        td
                            a(href='/user/' + user.id)= user.name
                        td= user.email
                        td= user.is_admin?'Yes':'No'
                        td= user.is_creator?'Yes':'No'
                        td= user.is_gm?'Yes':'No'
                        td= user.is_player?'Yes':'No'
                        td= user.is_player?runs[user.player.run_id].name:''
                        td= user.is_player?user.player.group_id?player_groups[user.player.group_id].name:'Ungrouped':''
                        td= user.is_player?user.player.character:''


append scripts
    script(src='/javascripts/data-table.js')
