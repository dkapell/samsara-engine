extends ../layout

include ../partials/editor

block content
    .row
        .col-sm-8.offset-sm-2
            .card
                .card-header= 'Edit Ink Story: ' + ink.name
                .card-body
                    form.form.needs-validation(method="POST" action="/ink/" + ink.id novalidate)
                        input(type="hidden", name="_method",  value="PUT")
                        input(type="hidden", name='_csrf',value=csrfToken)
                        input(type="hidden", name='ink[id]',value=ink.id)
                        include ./_form.pug

append scripts
    script(src='/javascripts/validator.js')
