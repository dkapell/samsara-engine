extends ../layout

block content
    if checkPermission('creator')
        a.btn.btn-outline-success(href='/imagemap/new')
            span(class="fa fa-plus")
            |  New Imagemap
    .table-responsive
        table.table.table-striped.table-sorted.table-hover.my-3.dt-responsive.nowrap.table-sm
            thead
                tr
                    th
                    th Name
                    th Image
                    th Template
                    th Description
                    if checkPermission('creator')
                        th

            tbody
                for imagemap in imagemaps
                    tr
                        td.dtr-expand
                        td
                            a(href='/imagemap/' + imagemap.id)= imagemap.name
                        td
                            if checkPermission('creator')
                                a(href='/image/' + imagemap.image.id)= imagemap.image.name
                            else
                                =imagemap.image.name
                        td= imagemap.template?'Yes':'No'

                        td= imagemap.description
                        if checkPermission('creator')
                            td.text-right
                                a.btn.btn-outline-success.btn-sm.mr-1(
                                    role="button",
                                    href=`/imagemap/new?clone=${imagemap.id}`,
                                    title="Copy"
                                )
                                    i.fas.fa-copy.fa-fw
                                a.btn.btn-outline-danger.btn-sm.delete-btn(
                                    role="button",
                                    url=`/imagemap/${imagemap.id}`,
                                    data-back='/imagemap'
                                    title="Delete"
                                )
                                    i.fas.fa-trash.fa-fw

append scripts
    script(src='/javascripts/data-table.js')
