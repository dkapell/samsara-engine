extends ../layout

block content
    -let hasErrors = false;
    if validation.issues.length
        - hasErrors=true;
        h3.text-danger Issues
        ul.list-unstyled
            each issue in validation.issues
                li= issue

    if _.keys(validation.unused.gamestates).length || _.keys(validation.unused.rooms).length || _.keys(validation.unused.imagemaps).length
        - hasErrors=true;
        h3.text-warning Unused Items
        if _.keys(validation.unused.gamestates).length
            h4
                a.text-warning(href='/gamestate') Gamestates
            ul
                each gamestate, key in validation.unused.gamestates
                    li=gamestate.name
        if _.keys(validation.unused.rooms).length
            h4
                a.text-warning(href='/room') Rooms
            ul
                each room, key in validation.unused.rooms
                    li=room.name

    if !hasErrors
        h3.text-success No Issues Found
