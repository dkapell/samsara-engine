extends ../layout

block content
    .row
        .col-sm-8.offset-sm-2
            .card
                .card-header New #{config.get('game.linkName')}
                .card-body
                    form.form.needs-validation(method="POST" action="/link" novalidate)
                        input(type="hidden", name='_csrf',value=csrfToken)
                        include ./_form.pug

append scripts
    script(src='/javascripts/validator.js')
