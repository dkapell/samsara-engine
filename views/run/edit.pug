extends ../layout

block content
    .row
        .col-sm-8.offset-sm-2
            .card
                .card-header= 'Edit Run: ' + run.name
                .card-body
                    form.form.needs-validation(method="POST" action="/run/" + run.id novalidate)
                        input(type="hidden", name="_method",  value="PUT")
                        input(type="hidden", name='_csrf',value=csrfToken)
                        input(type="hidden", name='run[id]',value=run.id)
                        include ./_form.pug

append scripts
    script(src='/javascripts/validator.js')
