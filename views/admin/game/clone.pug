extends ../../layout

include ../../partials/editor

block content
    .row
        .col-sm-8.offset-sm-2
            .card
                .card-header= 'Clone Game: ' + source.name
                .card-body
                    form.form.needs-validation(method="POST" action=`/admin/game/${source.id}/clone` novalidate)
                        input(type="hidden", name="_method",  value="POST")
                        input(type="hidden", name='_csrf',value=csrfToken)
                        include ./_form.pug

append scripts
    script(src='/javascripts/validator.js')
    script(src='/javascripts/cloneGame.js')
